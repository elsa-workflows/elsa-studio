<MudLink Typo="Typo.body2" OnClick="@OnClick">@DisplayText</MudLink>

@code {
    /// <summary>
    /// The text to display in the clickable link.
    /// </summary>
    [Parameter] public string? DisplayText { get; set; }

    /// <summary>
    /// Callback invoked when the link is clicked.
    /// </summary>
    [Parameter] public EventCallback OnClick { get; set; }
}
