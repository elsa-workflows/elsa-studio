@page "/workflows/definitions/{definitionId}/edit"
@using Orientation = Radzen.Orientation

<PageTitle>Workflow definition</PageTitle>

<RadzenSplitter Style="height: calc(100vh - var(--mud-appbar-height));">
    <RadzenSplitterPane Size="20%" Min="100px">
        <ActivityPicker/>
    </RadzenSplitterPane>
    <RadzenSplitterPane Size="50%">
        <RadzenSplitter Orientation="Orientation.Vertical">
            <RadzenSplitterPane Size="60%">
                <Workspace/>
            </RadzenSplitterPane>
            <RadzenSplitterPane Size="40%">
                <ActivityProperties/>
            </RadzenSplitterPane>
        </RadzenSplitter>
    </RadzenSplitterPane>
    <RadzenSplitterPane Size="30%" Min="100px">
        <WorkflowProperties/>
    </RadzenSplitterPane>
</RadzenSplitter>

@code
{
    [Parameter]
    public string DefinitionId { get; set; } = default!;
}