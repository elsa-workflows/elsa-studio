@inherits StudioComponentBase
@using Elsa.Studio.Workflows.Services
@inject ILocalizer Localizer

<div class="pa-4">
    <MudForm ReadOnly="IsReadOnly">
        <MudStack Spacing="5">
            <MudText Typo="Typo.overline">@Localizer["Workflow Context Settings"]</MudText>
            @if (_items.Count > 0)
            {
                <MudSimpleTable>                    
                    <tbody>
                        @foreach (var item in _items)
                        {
                            <tr>
                                <td>
                                    <MudText>@item.Text</MudText>
                                </td>
                                <td>
                                    <MudCheckBox T=bool? Value=@(IsChecked(@item.Value, "Load")) Label="@Localizer["Load"]" ValueChanged="@(IsChecked => OnValueChanged(@item.Value, "Load", IsChecked))"></MudCheckBox>
                                </td>
                                <td>
                                    <MudCheckBox T=bool? Value=@(IsChecked(@item.Value, "Save")) Label="@Localizer["Save"]" ValueChanged="@(IsChecked => OnValueChanged(@item.Value, "Save", IsChecked))"></MudCheckBox>
                                </td>
                            </tr>
                        }
                    </tbody>

                </MudSimpleTable>
            }
        </MudStack>
    </MudForm>

</div>

