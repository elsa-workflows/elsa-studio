{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Shell": {
    "DisableAuthorization": false
  },
  "Backend": {
    "Url": "https://localhost:5001/elsa/api"
  },
  "Localization": {
    "DefaultCulture": "en-US",
    "SupportedCultures": [
      "en-GB",
      "nl-NL"
    ]
  },
  "Authentication": {
    "Provider": "ElsaAuth",
    "OpenIdConnect": {
      "Authority": "https://login.microsoftonline.com/{tenantIdOrVerifiedDomain}/v2.0",
      "ClientId": "",
      "ClientSecret": ""
    }
  }
}
